<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 声明接口地址 -->
<mapper namespace="com.example.demo.dao.SchoolIntroductionDao">
    <!-- 绑定接口方法 -->
    <select id="getSchoolIntroductionDao" parameterType="String" resultType="String" >
        select school_introduction
        from school
        where school_id = #{schoolId}
    </select>
</mapper>