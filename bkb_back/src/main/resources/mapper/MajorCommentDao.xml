<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 声明接口地址 -->
<mapper namespace="com.example.demo.dao.MajorCommentDao">
    <!-- 绑定接口方法 -->
    <select id="getMajorCommentDao" parameterType="String" resultType="com.example.demo.entity.MajorComment" >
        select *
        from major_comment
        where major_id = #{majorId}
    </select>
</mapper>